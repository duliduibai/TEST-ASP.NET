@using VM_MVC.Models;
@model ShoppingCart
@{
    ViewBag.Title = "ShoppingCart";
}

<div class="ShoppingCart">
    <table cellspacing="0">
        <tr>
            <th>片名</th>
            <th>单价</th>
            <th>数量</th>
            <th>金额</th>
        </tr>
        @foreach(ShoppingCartItem item in this.Model.Items)
        {
            <tr>
                <td>@Html.RouteLink(item.ProductName, "ProductDetail",
                    new
                    {
                        ProductName = item.ProductName,
                        ProductId = item.ProductId
                    })
                </td>
                <td>
                    ￥@item.Price.ToString("#0.00")
                </td>
                <td>@item.Quantity</td>
                <td>￥@item.SubTotalPrice.ToString("#0.00")</td>
                <td>
                    <form action="@Url.RouteUrl("Remove")" method="post">
                        @* TODO: Hidden有什么用 *@
                        @Html.Hidden("ProductId", item.ProductId)
                        <input type="submit" value="" class="remove"/>
                    </form>
                </td>
            </tr>
        }
        <tr>
            <td colspan="3"></td>
            <td><b>总价：￥@this.Model.TotalPrice.ToString("#0.00")</b></td>
        </tr>
    </table>
    <div class="left">
        @Html.ValidationSummary()<div style="clear: both"></div>
    </div>
    <div class="right">
        <div>
            <img src="@Url.Content("~/Content/images/continueshopping.png")" alt=""/>
            @Html.RouteLink("继续购物", "Home")
        </div>
        @if(ShoppingCartBinder.GetShoppingCart().TotalQuantiy > 0)
        {
            <div>
                <img src="@Url.Content("~/Content/images/payment.png")" alt=""/>
                @Html.RouteLink("结账支付", "CheckOut")
            </div>
        }
    </div>
</div>

<h2>ShoppingCart</h2>

